<?xml version="1.0" encoding="utf-8"?>
<jnlp spec="1.0" codebase="{urlsite}{urlpattern}">
    <information>
        <title>Kevoree Runtime</title>
        <vendor>IRISA / INRIA Centre Rennes Bretagne Atlantique</vendor>
        <homepage href="{urlsite}{urlpattern}"/>
        <icon href="img/kevoree-logo-full.png" width="64" height="64"/>
        <!-- allow app to run without Internet access -->
        <offline-allowed/>

        <shortcut online="false">
            <!-- create desktop shortcut -->
            <desktop/>
            <menu submenu="Kevoree"/>
        </shortcut>
        <association mime-type="application-x/kevmodel" extensions="kev"/>
    </information>
    <resources>
        <j2se version="1.6*" href="http://java.sun.com/products/autodl/j2se"/>
        <jar href="download/KevoreeRuntimeLastRelease.jar" main="true"/>

    </resources>
    <application-desc main-class="org.kevoree.platform.standalone.gui.App">
    </application-desc>
    <update check="always" policy="prompt-update"/>
    <security>
        <all-permissions/>
    </security>
</jnlp>